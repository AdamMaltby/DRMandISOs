    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Console",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}",
            "env": {"PYTHONPATH": "${workspaceRoot}"},
            "logToFile": true,
            "args": ["-wb", "drminstaller-linux", "suu-linux", "-vvvvvv", "-l"]
        },
        {
            "name": "Debug Unit Test",
            "type": "python",
            "request": "test",
            "justMyCode": true
        }
    ]
}